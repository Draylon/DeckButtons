<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <TextView
            android:text="Default Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/panel_title" android:padding="10dp"
            android:textSize="18sp" android:gravity="center"/>
    <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/panel_grid"
            android:layout_below="@+id/panel_title" android:horizontalSpacing="15dp" android:verticalSpacing="15dp"
            android:numColumns="5" android:padding="15dp"/>
</RelativeLayout>